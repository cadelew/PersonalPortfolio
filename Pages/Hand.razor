<style>
    .hand-overlay {
        min-height: 100vh;
        background: linear-gradient(45deg, #0f3d1a, #2d1b0e);
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .hand-cards {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        justify-content: center;
        align-items: flex-start;
    }

    .pixel-card {
        width: 400px;
        min-height: 600px;
        background: white;
        border: 8px solid black;
        border-radius: 16px;
        padding: 20px;
        position: relative;
        color: black;
        box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.8);
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
    }

    .card-corner {
        position: absolute;
        font-size: 24px;
        font-weight: bold;
    }

    .top-left {
        top: 8px;
        left: 8px;
        color: red;
    }

    .bottom-right {
        bottom: 8px;
        right: 8px;
        color: red;
        transform: rotate(180deg);
    }

    .card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-content h2 {
        color: red;
        border-bottom: 4px solid red;
        padding-bottom: 8px;
        margin-top: 30px;
        margin-bottom: 20px;
        font-size: 18px;
    }

    .timeline {
        margin-top: 20px;
    }

    .timeline h3 {
        font-size: 14px;
        margin-bottom: 10px;
        border-bottom: 2px solid black;
        padding-bottom: 4px;
    }

    .timeline-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 12px;
    }

    .year {
        color: #ffcc00;
        font-weight: bold;
    }

    .xp {
        color: green;
        font-weight: bold;
    }

    .contact-item {
        margin-bottom: 16px;
    }

    .contact-info {
        width: 100%;
    }

    .label {
        font-weight: bold;
        font-size: 12px;
    }

    .value {
        font-size: 12px;
        color: #666;
    }

    .back-button {
        background-color: #1a8a1a;
        color: #ffcc00;
        border: 2px solid #ffcc00;
        padding: 12px 24px;
        font-size: 14px;
        cursor: pointer;
        font-family: 'Press Start 2P', cursive;
        box-shadow: 3px 3px 0px #8B4513;
        border-radius: 4px;
        transition: all 0.15s ease;
        transform: scale(1);
    }

    .back-button:hover {
        background-color: #2a9a2a;
        transform: translateY(-2px) scale(1.05);
        box-shadow: 5px 5px 0px #8B4513;
    }

    .back-button:active {
        transform: translateY(1px) scale(0.98);
        box-shadow: 2px 2px 0px #8B4513;
    }
</style>

@code {
    private void BackToTable()
    {
        NavigationManager.NavigateTo("table");
    }
}