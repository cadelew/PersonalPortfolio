@page "/hand"
@using PokerPortfolio.Models
@inject NavigationManager NavigationManager

<div class="hand-overlay">
    <div class="hand-cards">
        <!-- About Card -->
        <div class="pixel-card about-card">
            <div class="card-corner top-left">A ♥</div>
            <div class="card-corner bottom-right">A ♥</div>

            <div class="card-content">
                <h2>About Me</h2>

                <p>Hi, I'm Caden! I'm a student at UC Berkeley studying Electrical Engineering and Computer Science. I'm interested in backend development, machine learning, and low-latency systems. I love building cool stuff so feel to reach out!</p>

                
            </div>
        </div>

        <!-- Contact Card -->
        <div class="pixel-card contact-card">
            <div class="card-corner top-left">K ♦</div>
            <div class="card-corner bottom-right">K ♦</div>

            <div class="card-content">
                <h2>Contact</h2>

                <div class="contact-item">
                    <div class="contact-info">
                        <div class="label">EMAIL</div>
                        <a href="mailto:cadelewis2024@gmail.com" target="_blank">
                            <div class="value">cadelewis2024@gmail.com</div>
                        </a>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-info">
                        <div class="label">LINKEDIN</div>
                        <a href="https://www.linkedin.com/in/caden-lewis/" target="_blank">
                            <div class="value">linkedin.com/in/caden-lewis/</div>
                        </a>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-info">
                        <div class="label">GITHUB</div>
                        <a href="https://github.com/cadelew/" target="_blank">
                            <div class="value">github.com/cadelew/</div>
                        </a>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-info">
                        <div class="label">RESUME</div>
                        <a href="https://drive.google.com/file/d/1UMKaVD140MGN-hLr8KxADLO4xpwYLmc-/view?usp=sharing"
                            target="_blank">
                            <div class="value">View PDF</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button class="pixel-button back-button" @onclick="BackToTable">
        Back to Table
    </button>
</div>

<style>
    .hand-overlay {
        min-height: 100vh;
        background: linear-gradient(45deg, #0f3d1a, #2d1b0e);
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .hand-cards {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        justify-content: center;
        align-items: flex-start;
    }

    .pixel-card {
        width: 400px;
        min-height: 600px;
        background: white;
        border: 8px solid black;
        border-radius: 16px;
        padding: 20px;
        position: relative;
        color: black;
        box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.8);
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
    }

    .card-corner {
        position: absolute;
        font-size: 24px;
        font-weight: bold;
    }

    .top-left {
        top: 8px;
        left: 8px;
        color: red;
    }

    .bottom-right {
        bottom: 8px;
        right: 8px;
        color: red;
        transform: rotate(180deg);
    }

    .card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-content h2 {
        color: red;
        border-bottom: 4px solid red;
        padding-bottom: 8px;
        margin-top: 30px;
        margin-bottom: 20px;
        font-size: 18px;
    }

    .timeline {
        margin-top: 20px;
    }

    .timeline h3 {
        font-size: 14px;
        margin-bottom: 10px;
        border-bottom: 2px solid black;
        padding-bottom: 4px;
    }

    .timeline-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 12px;
    }

    .year {
        color: #ffcc00;
        font-weight: bold;
    }

    .xp {
        color: green;
        font-weight: bold;
    }

    .contact-item {
        margin-bottom: 16px;
    }

    .contact-info {
        width: 100%;
    }

    .label {
        font-weight: bold;
        font-size: 12px;
    }

    .value {
        font-size: 12px;
        color: #666;
    }

    .back-button {
        background-color: #ffcc00;
        color: #0f3d1a;
        border: 3px solid #2d1b0e;
        padding: 12px 24px;
        font-size: 14px;
        cursor: pointer;
    }

    .back-button:hover {
        background-color: #f5deb3;
        border-color: #ffcc00;
    }
</style>

@code {
    private void BackToTable()
    {
        NavigationManager.NavigateTo("/table");
    }
}